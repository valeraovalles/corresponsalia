{% extends '::base.html.twig' %}

{% block title %}CORRESPONSALÍA - CONSULTAR COBERTURA{% endblock %}

{% block titulobanner %}
    CONSULTAR COBERTURA
{% endblock %}

{% block titulomodulo %}
    <h1>CONSULTAR COBERTURA</h1><h2></h2>
{% endblock %}
    
{% block body -%}
    {{parent()}}

        <div class="formShow" style="width:80%;">
        <div class="contenedorform">
            <div class="labelform">Corresponsalía:</div>
            <div class="widgetform">{{ entity.periodorendicion.corresponsalia.nombre }}</div>
        </div>
        <div class="contenedorform">
            <div class="labelform">Tipo gasto:</div>
            <div class="widgetform">{{ entity.periodorendicion.tipogasto.descripcion }}</div>
        </div>
        <div class="contenedorform">
            <div class="labelform">Año:</div>
            <div class="widgetform">{{ entity.periodorendicion.anio }}</div>
        </div>
        <div class="contenedorform">
            <div class="labelform">Mes:</div>
            <div class="widgetform">{{ entity.periodorendicion.mes }}</div>
        </div>
        <div class="contenedorform">
            <div class="labelform">Descripcion:</div>
            <div class="widgetform">{{ entity.descripcion }}</div>
        </div>
        <div class="contenedorform">
            <div class="labelform">Fecha proceso:</div>
            <div class="widgetform">{{ entity.fechaproceso|date('d-m-Y G:i:s') }}</div>
        </div>
    </div>
    
    <a class="btn btn-default" href="{{ path('cobertura_edit', { 'id': entity.id }) }}">IR A EDITAR</a> | 
    <a class="btn btn-default" href="{{ path('cobertura',{'idperiodo':entity.periodorendicion.id}) }}">IR AL LISTADO</a>
  
    <BR><BR>
    {{ form_start(delete_form, { 'attr': {'onsubmit': 'return confirm("¿Seguro que deseas eliminar?")'} }) }}
        {{ form_errors(delete_form) }}
        {{ form_row(delete_form.submit, { 'attr': {'class': 'btn btn-danger'} }) }}
    {{ form_end(delete_form) }}
    

{% endblock %}
