                    <div class="labelform">Datos del Registro:</div>
                    <div class="widgetform" style:"width:100%;height:300px;">{{ entity.registro|capitalize }}</div>
                </div>
            {% else %}
                <div class="contenedorform">
                    <div class="labelform">Datos del Registro:</div>
                    <div class="widgetform">NO POSEE DESCRIPCI&Oacute;N</div>
                </div>
            {% endif %}

            {% if entity.representanteId != NULL %}
                <div class="contenedorform">
                    <div class="labelform">Representante Legal:</div>
                    <div class="widgetform">{{ entity.representanteId }}</div>
                </div>
                {% else %}
                <div class="contenedorform">
