    {% else %}

        <div class="formShow" style="width:80%;">
            <div class="contenedorform">
                NO EXISTEN DATOS LEGALES ASOCIADOS A ESTA CORRESPONSAL&Iacute;A
            </div>
        </div>
        <a class="btn btn-default" href="{{ path('datoslegales_new', { 'id': corresponsalia.id }) }}">AGREGAR DATOS</a> |

    {% endif %}
    
    <a class="btn btn-default" href="{{ path('datoslegales') }}">IR AL LISTADO</a>
    
