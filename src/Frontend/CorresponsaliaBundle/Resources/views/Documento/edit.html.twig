{% extends '::base.html.twig' %}

{% block title %}CORRESPONSALÍA - DOCUMENTOS{% endblock %}

{% block titulobanner %}
    DOCUMENTOS
{% endblock %}

{% block titulomodulo %}
    <h1>EDITAR EL DOCUMENTO</h1>
{% endblock %}
    
{% block body -%}
    {{ parent() }}

    {% if form_errors(edit_form.file) or form_errors(edit_form.descripcion) %}
    <div class="alert alert-danger errores" style="width:70%;">
        <div><b>Alerta! Ha ocurrido un error en el formulario:</b><br><br></div>
        <div>{{ form_errors(edit_form.file) }}</div>         
    </div>
    {% endif %}



    <form novalidate method="post" action="{{ path('documento_update',{'id':entity.id}) }}">
    	<input type="hidden" name="_method" value="PUT"> {{ form_widget(edit_form._token) }}
    	<div class="formShow" style="width:70%;">
            <div class="contenedorform">
                <div class="labelform">Corresponsal&iacute;a:</div>
                <div class="widgetform">{{ nombre_c }}</div>
            </div>       
        	<div class="contenedorform">
                <div class="labelform">Documento Asociado:</div>
                <div class="widgetform">{{ archivo }}</div>
            </div>
            <div class="contenedorform">
                <div class="labelform">¿Desea asociar otro?</div>
                <div class="widgetform">{{ form_widget(edit_form.file) }}</div>
            </div> 
	        <div class="contenedorform">
                <div class="labelform">Descripci&oacute;n del Documento:</div>
                 <div class="widgetform">{{ form_widget(edit_form.descripcion, { 'attr': {'style': 'width:100%;height:300px;'} }) }}</div>
            </div>  
        
			<input type="submit" value="EDITAR" class="btn btn-primary"> | <a class="btn btn-primary" href="{{ path('documento',{'corresponsalia':corresponsalia}) }}">IR AL HISTORIAL</a><br><br>
		</div>
    </form>
{% endblock %}
