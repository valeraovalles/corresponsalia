{% extends '::base.html.twig' %}

{% block titulomodulo %}  
    <h1>CREAR DESCRIPCIÓN</h1>
{% endblock %}

{% block body -%}
    {{ parent() }}



    {% if form_errors(form.descripcion) or form_errors(form.partida) or form_errors(form.tipogasto) %}
    <div class="alert alert-danger errores" style="width:70%;">
        <div><b>Alerta! Ha ocurrido un error en el formulario:</b><br><br></div>
        <div>{{ form_errors(form.descripcion) }}</div>        
        <div>{{ form_errors(form.partida) }}</div>
        <div>{{ form_errors(form.tipogasto) }}</div>
    </div>
    {% endif %}

    <form novalidate method="post" action="{{ path('descripciongasto_create') }}">
        {{ form_widget(form._token) }}
        <div class="formShow" style="width:70%;">
            <div class="contenedorform">
                <div class="labelform">Descripción:</div>
                <div class="widgetform">{{ form_widget(form.descripcion) }}</div>
            </div>
            <div class="contenedorform">
                <div class="labelform">Partida:</div>
                <div class="widgetform">{{ form_widget(form.partida) }}</div>
            </div>
            <div class="contenedorform">
                <div class="labelform">Tipo gasto:</div>
                <div class="widgetform">{{ form_widget(form.tipogasto) }}</div>
            </div>
        </div>
        <input type="submit" value="GUARDAR" class="btn btn-primary"> | 
        <a class="btn btn-default" href="{{ path('descripciongasto') }}">IR AL LISTADO DE DESCRIPCIÓN</a> {#| 
        <a class="btn btn-default" href="{{ path('estadofondo',{'idperiodo':periodo.id}) }}">IR AL LISTADO DE FONDOS</a>#}
    </form>


{% endblock %}
