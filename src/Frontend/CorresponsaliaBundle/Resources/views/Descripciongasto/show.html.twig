{% extends '::base.html.twig' %}

{% block titulomodulo %}<h1>CONSULTAR DESCRIPCIÓN GASTO</h1>{% endblock %}

{% block body -%}
    {{ parent() }}


    <div class="formShow" style="width:80%;">
        <div class="contenedorform">
            <div class="labelform">Id:</div>
            <div class="widgetform">{{ entity.id }}</div>
        </div>
        <div class="contenedorform">
            <div class="labelform">Descripcion:</div>
            <div class="widgetform">{{ entity.descripcion }}</div>
        </div>
        <div class="contenedorform">
            <div class="labelform">Partida:</div>
            <div class="widgetform">{{ entity.partida }}</div>
        </div>
    </div>


        <a class="btn btn-default" href="{{ path('descripciongasto') }}">
            Volver a la lista
        </a>

        <a class="btn btn-default" href="{{ path('descripciongasto_edit', { 'id': entity.id }) }}">
            Editar
        </a>

    <BR><BR>
    {{ form_start(delete_form, { 'attr': {'onsubmit': 'return confirm("¿Seguro que deseas eliminar?")'} }) }}
        {{ form_errors(delete_form) }}
        {{ form_row(delete_form.submit, { 'attr': {'class': 'btn btn-danger'} }) }}
    {{ form_end(delete_form) }}
    
{% endblock %}
