{% extends '::base.html.twig' %}

{% block title %}CORRESPONSALÍA - PERÍODO RENDICIÓN{% endblock %}

{% block titulobanner %}
    PERÍODO RENDICIÓN
{% endblock %}

{% block titulomodulo %}
    <h1> PERÍODO DE RENCIDIÓN Y ASIGNACIÓN DE FONDOS</h1><h2>{% if entities[0] is defined %} {{entities[0].corresponsalia.nombre|upper}} {% endif %}</h2>
{% endblock %}
    
    
{% block body -%}
    {{ parent() }}
    <br><table id="tablalista" style="width: 97%;">
        <thead>
            <tr>
                <th>Id</th>
                <th style="width: 5%">Anio</th>
                <th style="width: 5%">Mes</th>
                <th style="width: 30%">Corresponsalía</th>
                <th>Tipo gasto</th>
                <th>Estatus</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('periodorendicion_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.anio }}</td>
                <td>{{ entity.mes }}</td>
                <td>{{ entity.corresponsalia.nombre }}</td>
                <td>{{ entity.tipogasto.descripcion }}</td>
                <td>{% if entity.estatus==true %}<b class="label label-success">Abierto</b>{% else %}<b class="label label-danger">Cerrado</b>{% endif %}</td>
                <td>
                    <a href="{{ path('periodorendicion_show', { 'id': entity.id }) }}"><b class="glyphicon glyphicon-eye-open"></b></a>

                    <a href="{{ path('periodorendicion_edit', { 'id': entity.id }) }}"><b class="glyphicon glyphicon-edit"></b></a>
                    
                    <a href="{{ path('corresponsalia_rendirgasto', {'idperiodo':entity.id}) }}"><b class="text-warning">RENDIR</b></a> | 
                    <a href="{{ path('estadofondo_new', {'idperiodo':entity.id}) }}"><b class="text-warning">ASIGNAR FONDOS</b></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <br><br>

    <a class="btn btn-primary" href="{{ path('periodorendicion_new') }}">NUEVO PERÍODO</a>

    <br><br>

    <script>
    $(document).ready(function(){
       $('#tablalista').dataTable( { //CONVERTIMOS NUESTRO LISTADO DE LA FORMA DEL JQUERY.DATATABLES- PASAMOS EL ID DE LA TABLA
            "sPaginationType": "full_numbers", //DAMOS FORMATO A LA PAGINACION(NUMEROS)
            "aaSorting": [[5,'asc'],[1,'asc'],[2,'asc']],
        } );
    })
    </script>
    {% endblock %}
