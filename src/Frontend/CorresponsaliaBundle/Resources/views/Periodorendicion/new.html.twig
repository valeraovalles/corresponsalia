{% extends '::base.html.twig' %}

{% block title %}CORRESPONSALÍA - NUEVO PERÍODO{% endblock %}

{% block titulobanner %}
    NUEVO PERÍODO
{% endblock %}

{% block titulomodulo %}
    <h1>NUEVO PERÍODO</h1>
{% endblock %}
    
{% block body -%}
    {{ parent() }}
    
    {% if form_errors(form.anio) or form_errors(form.mes) or form_errors(form.corresponsalia) or form_errors(form.tipogasto) or form_errors(form.descripcionperiodo) or error %}
    <div class="alert alert-danger errores" style="width:70%;">
        <div><b>Alerta! Ha ocurrido un error en el formulario:</b><br><br></div>
        <div>{{ form_errors(form.corresponsalia) }}</div>
        <div>{{ form_errors(form.tipogasto) }}</div>
        <div>{{ form_errors(form.descripcionperiodo) }}</div>
        <div>{{ form_errors(form.anio) }}</div>
        <div>{{ form_errors(form.mes) }}</div>
        {% for e in error %}<div><ul><li>{{ e }}</li></ul></div>{% endfor %}
    </div>
    {% endif %}
    
    <form novalidate method="post" action="{{ path('periodorendicion_create') }}">
        {{ form_widget(form._token) }}
        <div class="formShow" style="width:70%;">
            <div class="contenedorform">
                <div class="labelform">Corresponsalía:</div>
                <div class="widgetform">{{ form_widget(form.corresponsalia) }}</div>
            </div>
            <div class="contenedorform">
                <div class="labelform">Tipo gasto:</div>
                <div class="widgetform">{{ form_widget(form.tipogasto) }}</div>
            </div>
            <div class="contenedorform">
                <div class="labelform">Descripción período:</div>
                <div class="widgetform">{{ form_widget(form.descripcionperiodo) }}</div>
            </div>
            <div class="contenedorform">
                <div class="labelform">Anio:</div>
                <div class="widgetform">{{ form_widget(form.anio) }}</div>
            </div>
            <div class="contenedorform">
                <div class="labelform">Mes:</div>
                <div class="widgetform">{{ form_widget(form.mes) }}</div>
            </div>
            <div class="contenedorform">
                <div class="labelform">Observación:</div>
                <div class="widgetform">{{ form_widget(form.observacion) }}</div>
            </div>
        </div>
    
        <input type="submit" value="CREAR" class="btn btn-primary"> | 
        <a class="btn btn-default" href="{{ path('periodorendicion') }}">IR AL LISTADO</a>
    </form>

{% endblock %}
