{% extends '::base.html.twig' %}

{% block body -%}
    {{ parent() }}

    <h1>EDITAR CORRESPONSALÍA</h1>

    {% if form_errors(edit_form.nombre)  or form_errors(edit_form.pais) or form_errors(edit_form.tipocorresponsalia) or form_errors(edit_form.tipomoneda)%}
    <div class="alert alert-danger errores" style="width:70%;">
        <div><b>Alerta! Ha ocurrido un error en el formulario:</b><br><br></div>
        <div>{{ form_errors(edit_form.nombre) }}</div>
        <div>{{ form_errors(edit_form.pais) }}</div>
        <div>{{ form_errors(edit_form.tipocorresponsalia) }}</div>
        <div>{{ form_errors(edit_form.tipomoneda) }}</div>
    </div>
    {% endif %}
    
    
    <form novalidate method="post" action="{{ path('corresponsalia_update',{'id':entity.id}) }}">
        <input type="hidden" name="_method" value="PUT"> {{ form_widget(edit_form._token) }}
        <div class="formShow" style="width:70%;">
            <div class="contenedorform">
                <div class="labelform">Nombre:</div>
                <div class="widgetform">{{ form_widget(edit_form.nombre) }}</div>
            </div>
            <div class="contenedorform">
                <div class="labelform">País:</div>
                <div class="widgetform">{{ form_widget(edit_form.pais) }}</div>
            </div>
            <div class="contenedorform">
                <div class="labelform">Tipo:</div>
                <div class="widgetform">{{ form_widget(edit_form.tipocorresponsalia) }}</div>
            </div>
            <div class="contenedorform">
                <div class="labelform">Tipo moneda:</div>
                <div class="widgetform">{{ form_widget(edit_form.tipomoneda) }}</div>
            </div>
        </div>
        <input type="submit" value="EDITAR" class="btn btn-primary"> | 
        <a class="btn btn-default" href="{{ path('corresponsalia') }}">IR AL LISTADO</a>
    </form>
    <br>
    {{ form_start(delete_form, { 'attr': {'onsubmit': 'return confirm("¿Seguro que deseas eliminar?")'} }) }}
        {{ form_errors(delete_form) }}
        {{ form_row(delete_form.submit, { 'attr': {'class': 'btn btn-danger'} }) }}
    {{ form_end(delete_form) }}

    
{% endblock %}
