{% extends '::base.html.twig' %}

{% block titulomodulo %}<h1>EDITAR CATEGORIA</h1>{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/corresponsalia/Tecnologia/css/tecno_general.css') }}"/>
{% endblock %}

{% block body -%}
    {{ parent() }}

    {% if form_errors(edit_form.nombre)%}
    <div class="alert alert-danger errores" style="width:70%;">
        <div><b>Alerta! Ha ocurrido un error en el formulario:</b><br><br></div>
        <div>{{ form_errors(edit_form.nombre) }}</div>
    </div>
    {% endif %}
    <form novalidate method="post" action="{{ path('tecnocategoria_update',{'id':entity.id}) }}">
         <input type="hidden" name="_method" value="PUT"> {{ form_widget(edit_form._token) }}
         <div class="formShow" style="width:70%;">
            <div class="contenedorform">
                <div class="contenedorform">
                    <div class="labelform">Nombre de Categoria:</div>
                    <div class="widgetform">
                        <input type="text" id="frontend_corresponsaliabundle_tecnologia_categoria_nombre" 
                               name="frontend_corresponsaliabundle_tecnologia_categoria[nombre]" required="required" maxlength="255"    
                               class="form_input" value="{{entity.nombre|capitalize}}" />
                    </div>
                </div>
            </div>
         </div>
        <input type="submit" value="Guardar" class="btn btn-primary"> | 
        <a class="btn btn-default" href="{{ path('tecnocategoria_show',{'id':entity.id}) }}">Consulta</a> | 
        <a class="btn btn-default" href="{{ path('tecnocategoria') }}">Listado</a>
    </form>

    <BR>
    {{ form_start(delete_form, { 'attr': {'onsubmit': 'return confirm("Â¿Seguro que deseas eliminar?")'} }) }}
        {{ form_errors(delete_form) }}
        {{ form_row(delete_form.submit, { 'attr': {'class': 'btn btn-danger'} }) }}
    {{ form_end(delete_form) }}
{% endblock %}
