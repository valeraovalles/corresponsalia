{% extends '::base.html.twig' %}

{% block body -%}
    {{ parent() }}
    <h1>Estado Fondo</h1>

    <div class="formShow" style="width:80%;">
        <div class="contenedorform">
            <div class="labelform">Id:</div>
            <div class="widgetform">{{ entity.id }}</div>
        </div>
        <div class="contenedorform">
            <div class="labelform">Corresponsalia:</div>
            <div class="widgetform">{{ entity.corresponsalia.nombre|upper }}</div>
        </div>
        <div class="contenedorform">
            <div class="labelform">Tipo gasto:</div>
            <div class="widgetform">{{ entity.tipogasto.descripcion|upper }}</div>
        </div>
        <div class="contenedorform">
            <div class="labelform">Saldo inicial:</div>
            <div class="widgetform">{{ entity.saldoinicial }}</div>
        </div>
        <div class="contenedorform">
            <div class="labelform">Recurso recibido:</div>
            <div class="widgetform">{{ entity.recursorecibido }}</div>
        </div>
        <div class="contenedorform">
            <div class="labelform">Año:</div>
            <div class="widgetform">{{ entity.anio }}</div>
        </div>
        <div class="contenedorform">
            <div class="labelform">Mes:</div>
            <div class="widgetform">{{ entity.mes }}</div>
        </div>
        <div class="contenedorform">
            <div class="labelform">Fecha de registro:</div>
            <div class="widgetform">{{ entity.fechaasignacion|date('d-m-Y') }}</div>
        </div>
        <div class="contenedorform">
            <div class="labelform">Observación:</div>
            <div class="widgetform">{{ entity.observacion|capitalize }}</div>
        </div>
        <div class="contenedorform">
            <div class="labelform">Responsale:</div>
            <div class="widgetform">{{ entity.responsable.primerNombre|title }} {{ entity.responsable.primerApellido|title }}</div>
        </div>
    </div>
    
    <a class="btn btn-default" href="{{ path('estadofondo_edit', { 'id': entity.id }) }}">IR A EDITAR</a> | 
    <a class="btn btn-default" href="{{ path('estadofondo') }}">IR AL LISTADO DE FONDOS</a>
  
    <BR><BR>
    {{ form_start(delete_form, { 'attr': {'onsubmit': 'return confirm("¿Seguro que deseas eliminar?")'} }) }}
        {{ form_errors(delete_form) }}
        {{ form_row(delete_form.submit, { 'attr': {'class': 'btn btn-danger'} }) }}
    {{ form_end(delete_form) }}

{% endblock %}
